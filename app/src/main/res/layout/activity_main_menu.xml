<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team8.ui.MainMenu">

    <RelativeLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="90dp">

        <Button
            android:id="@+id/offlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp"
            android:onClick="goToGameMode"
            android:text="Offline" />

        <Button
            android:id="@+id/onlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/offlineButton"
            android:layout_alignStart="@+id/offlineButton"
            android:layout_below="@+id/offlineButton"
            android:layout_marginTop="98dp"
            android:onClick="goToGameMode"
            android:text="Online" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
